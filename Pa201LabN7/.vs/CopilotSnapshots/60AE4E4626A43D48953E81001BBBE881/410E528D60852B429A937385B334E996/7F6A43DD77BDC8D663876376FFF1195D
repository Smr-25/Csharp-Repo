using Microsoft.EntityFrameworkCore;
using Pa201LabN7.Data;
using Pa201LabN7.Models;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;

namespace Pa201LabN7.Services
{
    public class EventService
    {
        private readonly AppDbContext _db;

        public EventService()
        {
            _db = new AppDbContext();
        }

        public async Task<Event> CreateEventAsync(string name, DateTime date, decimal price)
        {
            var ev = new Event
            {
                Name = name,
                Date = date,
                Price = price
            };

            _db.Events.Add(ev);
            await _db.SaveChangesAsync();
            return ev;
        }

        public async Task<List<Event>> GetAllEventsAsync()
        {
            return await _db.Events.OrderBy(e => e.Date).ToListAsync();
        }

        public async Task<Event?> GetEventAsync(int id)
        {
            return await _db.Events.SingleOrDefaultAsync(e => e.Id == id);
        }

        public async Task<bool> UpdateEventAsync(int id, string name, DateTime date, decimal price)
        {
            var existing = await _db.Events.FindAsync(id);
            if (existing == null)
            {
                return false;
            }

            existing.Name = name;
            existing.Date = date;
            existing.Price = price;

            await _db.SaveChangesAsync();
            return true;
        }

        public async Task<bool> DeleteEventAsync(int id)
        {
            var existing = await _db.Events.FindAsync(id);
            if (existing == null)
                return false;

            _db.Events.Remove(existing);
            await _db.SaveChangesAsync();
            return true;
        }
    }
}
