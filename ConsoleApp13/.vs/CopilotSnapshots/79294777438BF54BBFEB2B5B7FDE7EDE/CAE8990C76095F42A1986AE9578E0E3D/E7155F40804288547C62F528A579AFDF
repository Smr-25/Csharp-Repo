using Microsoft.EntityFrameworkCore;
using ConsoleApp13.Models;

namespace ConsoleApp13.Data;

public class TestDbContext : DbContext
{

    public DbSet<Group> Groups { get; set; }

    // Parameterless constructor for runtime usage if needed
    public TestDbContext()
    {
    }

    // Constructor for DI and design-time factories
    public TestDbContext(DbContextOptions<TestDbContext> options)
        : base(options)
    {
    }

    protected override void OnConfiguring(DbContextOptionsBuilder optionsBuilder)
    {
        if (!optionsBuilder.IsConfigured)
        {
            optionsBuilder.UseSqlServer("server=MOON01\\SQLEXPRESS;database=TestDb;TrustServerCertificate=True");
        }
    }
}